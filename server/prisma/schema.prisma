generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String       @id @default(uuid())
  firstName        String       @map("first_name")
  lastName         String       @map("last_name")
  email            String       @unique
  permissionsLevel Int          @default(0)
  password         String
  presentsIn       Assistance[] @relation("presents")
  latesIn          Assistance[] @relation("lates")
  absencesIn       Assistance[] @relation("absences")

  @@unique(name: "fullName", [firstName, lastName])
}

model Student {
  id        String   @id @default(uuid())
  firstName String   @map("first_name")
  lastName  String   @map("last_name")
  gradeId   String   @map("grade_id")
  grade     Grade    @relation(fields: [gradeId], references: [id])
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@unique(name: "fullName", [firstName, lastName])
}

model Grade {
  id              String        @id @default(uuid())
  label           Int
  section         String
  academicLevelId String        @map("academic_level_id")
  academicLevel   AcademicLevel @relation(fields: [academicLevelId], references: [id])
  Student         Student[]

  @@unique(name: "uniqueGrade", [label, section, academicLevelId])
}

model AcademicLevel {
  id     String  @id @default(uuid())
  name   String  @unique
  grades Grade[]
}

model Assistance {
  id         String   @id @default(uuid())
  date       DateTime @default(now())
  scheduleId String   @unique
  presents   User[]   @relation("presents")
  lates      User[]   @relation("lates")
  absences   User[]   @relation("absences")
  Schedule   Schedule @relation(fields: [scheduleId], references: [id])
}

model Schedule {
  id          String       @id @default(uuid())
  gradeId     String       @map("grade_id")
  lea         Int          @unique
  assistances Assistance[]
}
